@{
    ViewData["Title"] = "Verfiy Email";
}
@model UserVerifyEmailDto
<h1>Verfiy Email</h1>

<div class="row">
    <div class=col-md-6>
        <form asp-controller="User" asp-action="VerifyEmail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Token"></label>
                <input asp-for="Token" class="form-control" />
                <span asp-validation-for="Token" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Verify" class="btn-primary" />
            </div>
        </form>
    </div>
</div>